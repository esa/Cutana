[flake8]
max-line-length = 100
extend-ignore = E203, E501, W503, W293, W291, F541, F841
exclude = 
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    env,
    .pytest_cache,
    htmlcov,
    logs,
    tmp,
    screenshots,
    workflow_*.json,
    tracking*.json,
    conftest.py,
    playwright.config.py,
    .csv